WINGS_CONTAINER_NAME=xyra-wings-isolated
WINGS_NETWORK_NAME=wings0-isolated
WINGS_HTTP_PORT=8180
WINGS_SFTP_PORT=2223
WINGS_TZ=UTC

# For local Docker Desktop usage, root avoids common docker.sock permission issues.
WINGS_UID=0
WINGS_GID=0
WINGS_USERNAME=pterodactyl

# Host paths used by Wings. For Docker socket mode, these paths must exist on
# the Docker daemon host at the same absolute path as inside the Wings container.
WINGS_CONFIG_PATH=./.data/wings-isolated/etc
WINGS_LOG_PATH=./.data/wings-isolated/log
WINGS_TMP_PATH=./.data/wings-isolated/tmp
WINGS_DATA_PATH=/var/lib/pterodactyl-isolated
WINGS_RUNTIME_PATH=/run/wings-isolated
